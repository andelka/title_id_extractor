<% flash.each do |key, value| %>
      <div class="<%= flash_class(key) %>">
            <%= value %>
      </div>
<% end %>


<h1> ITT extractor </h1>

<button type="button" class="btn btn-default btn-lg"><%= link_to 'Add new keyword', new_keyword_path %></button>
<button type="button" class="btn btn-default btn-lg"><%= link_to "Download as .xlsx", keywords_path(format: "xlsx") %></button>

<h3> Import a list of keywords </h3>
<%= form_tag import_keywords_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Upload keywords" %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>id</th>
      <th>Text</th>
      <th>Results</th>
      <th><colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <%= form_tag destroy_multiple_keywords_path, method: :delete do %>
      <% @keywords.each do |keyword| %>
        <tr>
          <td><%= check_box_tag "keyword_ids[]", keyword.id %></td>
          <td><%= keyword.id %></td>
          <td><%= keyword.text %></td>
          <td><%= keyword.result_count %></td>
          <td><%= link_to 'Edit', edit_keyword_path(keyword) %></td>
          <td><%= link_to 'Delete', keyword_path(keyword),
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <%= submit_tag 'Delete selected' %>
    <% end %>
  </tbody>
</table>
